script/source = "extends Control

var upgrade1 = false
var upgrade2 = false
var upgrade3 = false
var sell = 1
var upgradeunlock
var infopopupmenu
var infopopupmenu2
var infopopupmenu3

#Upgrade1_unlock
export var price1 = 1500
#Upgrade2_unlock
export var price2 = 1500
#Upgrade3_unlock
export var price3 = 4000

#Variablen und Preise werden festgelegt
func _ready():
	set_as_toplevel(true)
	upgradeunlock = get_parent().get_parent().get_parent().get_node(\".\")
	get_node(\"SpecialUpgradeBackround/Cost\").text = str(price1) + \"$\"
	get_node(\"SpecialUpgradeBackround3/Cost3\").text = str(price2) + \"$\"
	get_node(\"SpecialUpgradeBackround2/Cost2\").text = str(price3) + \"$\"
	sell = get_parent().get_parent().get_parent().uniPrice
	infopopupmenu = get_node(\"InfoBoxOutline\")
	infopopupmenu2 = get_node(\"InfoBoxOutline2\")
	infopopupmenu3 = get_node(\"InfoBoxOutline3\")

func _process(delta):
	checkstatus()

#Knopfdruck-Methoden
func _on_TextureButton_pressed():
	visible = false
	infopopupmenu.visible = false
	infopopupmenu2.visible = false
	infopopupmenu3.visible = false


func _on_SpecialUpgradeButton_pressed():
	upgrade1 = true
	upgradeunlock.setUpgrade1Unlock(upgrade1)
	get_parent().get_parent().get_parent().get_node(\".\").money -= price1
	sell += price1
	get_node(\"SpecialUpgradeBackround/SpecialUpgradeButton\").set_disabled(true)
	get_node(\"SpecialUpgradeBackround/Cost\").text = \"Gekauft\"


func _on_SpecialUpgradeButton3_pressed():
	upgrade2 = true
	upgradeunlock.setUpgrade2Unlock(upgrade2)
	get_parent().get_parent().get_parent().get_node(\".\").money -= price2
	sell += price2
	get_node(\"SpecialUpgradeBackround3/SpecialUpgradeButton3\").set_disabled(true)
	get_node(\"SpecialUpgradeBackround3/Cost3\").text = \"Gekauft\"


func _on_SpecialUpgradeButton2_pressed():
	upgrade3 = true
	get_parent().get_parent().get_parent().get_node(\".\").money -= price3
	sell += price3
	get_node(\"SpecialUpgradeBackround2/SpecialUpgradeButton2\").set_disabled(true)
	get_node(\"SpecialUpgradeBackround2/Cost2\").text = \"Gekauft\"

func getUpgrade3():
	return upgrade3

#Der Verkaufspreis wird zurückgegeben und die Uni-Variablen in der Global zurückgesetzt.
func _on_SellButton_pressed():
	get_parent().get_parent().get_parent().get_node(\".\").money += int(sell * 0.75)
	get_parent().get_parent().get_parent().get_node(\".\").upgrade1unlock = false
	get_parent().get_parent().get_parent().get_node(\".\").upgrade2unlock = false
	get_parent().get_parent().get_parent().get_node(\".\").pauseAllowed = 0
	get_parent().get_parent().get_parent().get_node(\".\").max_universitaet = false
	get_parent().get_parent().get_parent().get_node(\"InterfaceLayer/Interface/ShopLayer/ShopMenu\").unigekauft = false
	get_parent().get_parent().get_parent().get_node(\"InterfaceLayer/Interface/ShopLayer/ShopMenu/ShopBackround/UniversitaetText\").text = \"Universität: \" + str(get_parent().get_parent().get_parent().get_node(\".\").uniPrice) + \"$\"
	# Damit die Hotkeys funktionieren
	infopopupmenu.visible = false
	infopopupmenu2.visible = false
	infopopupmenu3.visible = false
	visible = false
	get_parent().get_parent().queue_free()

func _on_InfoButton_pressed():
	infopopupmenu2.visible = false
	infopopupmenu3.visible = false
	if(infopopupmenu.visible == false):
		infopopupmenu.visible = true
	else:
		infopopupmenu.visible = false


func _on_InfoButton2_pressed():
	infopopupmenu.visible = false
	infopopupmenu3.visible = false
	if(infopopupmenu2.visible == false):
		infopopupmenu2.visible = true
	else:
		infopopupmenu2.visible = false


func _on_InfoButton3_pressed():
	infopopupmenu.visible = false
	infopopupmenu2.visible = false
	if(infopopupmenu3.visible == false):
		infopopupmenu3.visible = true
	else:
		infopopupmenu3.visible = false


func _input(event):
	if event.is_action_pressed(\"ui_cancel\"):
		visible = false
		infopopupmenu.visible = false
		infopopupmenu2.visible = false
		infopopupmenu3.visible = false
	if event.is_action_pressed(\"Hotkey5\"):
		visible = false
		infopopupmenu.visible = false
		infopopupmenu2.visible = false

#Hotkey-Überprüfung
func checkstatus():
	if(visible == false):
		get_parent().get_parent().get_parent().get_node(\".\").pauseAllowed = 1
	if(visible == true):
		get_parent().get_parent().get_parent().get_node(\".\").pauseAllowed = 0
"

