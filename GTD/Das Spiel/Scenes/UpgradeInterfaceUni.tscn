var money = 0

func _process(delta):
	money = get_parent().get_parent().get_parent().get_parent().get_parent().get_node(\".\").money
	check_status()

func check_status():
	if (get_parent().get_parent().get_parent().get_parent().get_parent().get_node(\".\").money < get_parent().get_parent().price1 || get_parent().get_parent().get_parent().get_parent().get_parent().get_node(\".\").upgrade1unlock == true):
		set_disabled(true)
	if(get_parent().get_parent().get_parent().get_parent().get_parent().get_node(\".\").money >= get_parent().get_parent().price1  && get_parent().get_parent().get_parent().get_parent().get_parent().get_node(\".\").upgrade1unlock == false):
		set_disabled(false)
"

