script/source = "extends RigidBody2D

export var damage = 2
export var radius = 1
var already_exploded = false

func _ready():
	$Explosion_particle.emitting = false
	scale = Vector2(0.5,0.5)
	
func _process(_delta):
	if already_exploded == false:
		already_exploded = true
		yield(get_tree().create_timer(0.4), \"timeout\")
		explode()

func _on_Bomb_body_entered(_body):
	if already_exploded == false:
		already_exploded = true
		yield( get_tree(), \"idle_frame\" )
		explode()
	
func setDamage(newDamage):
	damage = newDamage
	
func setRadius():
	radius = radius * 2

func explode():
	mode = 3
	$Bomb_sprite.visible = false
	$Explosion_particle.emitting = true
	$Explosion_Sound.play()
	var i = 0
	var units = $Range.get_overlapping_bodies()
	while i < units.size():
		units[i].hit(damage)
		i += 1
		
	yield(get_tree().create_timer(1), \"timeout\")
	queue_free()
"

